<!-- Pre-loader start -->
<div class="theme-loader">
</div>
<!-- Pre-loader end -->
<section >
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <div class="signup-card card-block auth-body mr-auto ml-auto">
                    <form class="md-float-material needs-validation" action="/auth/signup" method="POST" novalidate>

                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary">Sign up</h3>
                                </div>
                            </div>
                        
                            <div class="form-group">
                                <input type="text" class="form-control" name="fullName"
                                    placeholder="Enter full-name" required>
                                <div class="invalid-feedback">
                                    Please enter name
                                </div>
                                <span class="md-line"></span>
                            </div>
                            <div class="form-group">
                                {{#if notify.errAcc}}
                                <input type="text" class="form-control is-invalid" name="username" id="validationCustomUsername"
                                    aria-describedby="inputGroupPrepend" placeholder="Enter Username" required>
                                <div class="invalid-feedback">
                                    {{notify.errAcc}}
                                </div>

                                {{else}}

                                <input type="text" class="form-control" name="username" placeholder="Enter Username"
                                    required>
                                <div class="invalid-feedback">
                                    Please enter username 
                                </div>
                                {{/if}}
                                <span class="md-line"></span>
                            </div>
                            <div class="form-group">

                                {{#if notify.errEmail}}
                                <input type="email" class="form-control is-invalid" name="email" placeholder="Your Email Address"
                                    required>
                                <div class="invalid-feedback">
                                    {{notify.errEmail}}
                                </div>
                                {{else}}
                                <input type="email" class="form-control" name="email" placeholder=" Email Address"
                                    required>
                                <div class="invalid-feedback">
                                    Please enter email
                                </div>
                                {{/if}}
                                <span class="md-line"></span>

                            </div>
                            <div class="form-group">
                                {{#if notify.errPwd}}
                                <input type="password" class="form-control is-invalid" name="password"
                                    placeholder="Choose Password" required>
                                <div class="invalid-feedback">
                                    {{notify.errPwd}}
                                </div>
                                {{else}}
                                <input type="password" class="form-control" name="password"
                                    placeholder="Enter Password" required>
                                <div class="invalid-feedback">
                                    Please enter password 
                                </div>
                                {{/if}}
                                <span class="md-line"></span>
                            </div>


                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button type="submit"
                                        class="btn  btn-md btn-block  text-center m-b-20">Sign up
                                        now</button>
                                </div>
                            </div>
                            

                        </div>
                    </form>
                    <!-- end of form -->
                </div>
                <!-- Authentication card end -->
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>