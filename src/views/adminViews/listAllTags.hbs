                <div class="pcoded-content">
                    <div class="pcoded-inner-content">
                        <div class="main-body">
                            <div class="page-wrapper">
                                <div class="page-body">
                                    <!-- Page-header start -->
                                    <div class="page-header card" style="background-color: lightgray;">
                                        <div class="row align-items-end">
                                            <div class="col-lg-8">
                                                <div class="page-header-title">
                                                    <div class="d-inline">
                                                        <h4>List of Categories</h4>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">

                                            </div>
                                        </div>
                                    </div>
                                    <!-- Page-header end -->
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- Tab variant tab card start -->
                                            <div class="card add-task-card">
                                                <div class="card-header">

                                                    <div class="card-header-left">
                                                        <button type="button" class="btn "
                                                            data-toggle="modal" data-target="#exampleModal">
                                                            Add Tag
                                                        </button>
                                                    </div>
                                                </div>

                                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content"style="border-radius:50px">
                                                            <div class="modal-header" >
                                                                <h5 class="modal-title" id="exampleModalLabel">New
                                                                    Tag</h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <form action="/admin/addOneTag" method="POST"
                                                                class="needs-validation" novalidate>
                                                                <div class="modal-body">
                                                                    <div class="form-group">
                                                                        <label for="recipient-name"
                                                                            class="col-form-label">Name:</label>
                                                                        <input type="text" class="form-control"
                                                                            id="recipient-name" name="tagName" required>
                                                                        <div class="invalid-feedback">
                                                                            Please enter a Tag name
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="message-text"
                                                                            class="col-form-label">Description:</label>
                                                                        <textarea class="form-control" id="message-text"
                                                                            name="tagDesc"></textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn "style="border-radius:50px"
                                                                        data-dismiss="modal">Close</button>
                                                                    <button type="submit"
                                                                        class="btn " style="border-radius:50px">Add</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                {{#if notify.success}}
                                                <div class="alert " role="alert" style="width: auto;     text-align: center; color:green">
                                                    {{notify.success}}
                                                </div>
                                                {{else if notify.errTag}}
                                                <div class="alert " role="alert" style="width: auto;     text-align: center; color:red;">
                                                    {{notify.errTag}}
                                                </div>
                                                {{/if}}

                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table ">
                                                            <thead style="background-color: lightgray;">
                                                                <tr>
                                                                    <th scope="col">Number</th>
                                                                    <th scope="col">Tag name</th>
                                                                    <th scope="col">Description</th>
                                                                    <th scope="col">Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="listTag">
                                                                {{#each tags}}
                                                                <tr>
                                                                    <td>{{@index}}</td>
                                                                    <td>{{name}}</td>
                                                                    <td>{{describe}}</td>
                                                                    <td class="d-flex flex-row">
                                                                        <button id="{{_id}}"
                                                                            class="btn btn-danger  btn-deleteTag"
                                                                            title="Delete" data-toggle="tooltip">
                                                                            <i class="ti-trash"></i>
                                                                        </button>
                                                                    </td>
                                                                    {{else}}
                                                                    <td colspan="5">
                                                                        <div class="alert alert-primary" role="alert">
                                                                            No Data
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                {{/each}}
                                                            </tbody>
                                                        </table>
                                                        <nav aria-label="Page navigation example">
                                                            <ul class="pagination justify-content-end" style="margin: 10px 15px;">
                                                                {{#paginate pagination type="first"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allTags?p={{n}}">First</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="previous"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link" href="/admin/allTags?p={{n}}">Previous</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="middle" limit="7"}}
                                                                <li {{#if active}}class="page-item active" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allTags?p={{n}}">{{n}}</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="next"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allTags?p={{n}}">Next</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="last"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allTags?p={{n}}">Last</a>
                                                                </li>
                                                                {{/paginate}}
                                                            </ul>
                                                        </nav>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Tab variant tab card start -->
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div id="styleSelector">

                            </div>
                        </div>
