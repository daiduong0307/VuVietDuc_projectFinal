                <div class="pcoded-content">
                    <div class="pcoded-inner-content">
                        <div class="main-body">
                            <div class="page-wrapper">
                                <div class="page-body">
                                    <!-- Page-header start -->
                                    <div class="page-header card" style="background-color: lightgray;">
                                        <div class="row align-items-end">
                                            <div class="col-lg-8">
                                                <div class="page-header-title">
                                                    <div class="d-inline">
                                                        <h4>Manager Accounts</h4>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                              
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Page-header end -->
                                    <div class="row">
                                        <div class="col-sm-12">

                                            <div class="card">
                                                <div class="card-block">
                                                    <form action="/admin/searchManager" method="GET">
                                                        <div class="form-group row">
                                                            <div class="col">
                                                                <h6>Time Request From</h6>
                                                                <input type="date" id="timeFrom" name="timeFrom"
                                                                    class="form-control" placeholder="col" />
                                                            </div>
                                                            <div class="col">
                                                                <h6>Time Request To</h6>
                                                                <input type="date" id="timeTo" name="timeTo"
                                                                    class="form-control" placeholder="col-sm-4"
                                                                    value="" />
                                                            </div>

                                                            <div class="col-sm-4">
                                                                <h6>Username</h6>
                                                                <select class="selectpicker form-control"
                                                                    name="username" data-live-search="true" multiple>
                                                                    {{#each managerAcc}}
                                                                    <option value="{{_id}}">{{username}}</option>
                                                                    {{/each}}
                                                                </select>
                                                            </div>

                                                        </div>
                                                        <div class="row">
                                                            <div class="col text-left">
                                                                <button
                                                                    class="btn ">Search</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>

                                            <!-- Tab variant tab card start -->
                                            <div class="card add-task-card">
                                                <div class="card-header">

                                                    <div class="card-header-left">
                                                        <button class="btn "
                                                            onclick="window.location='/admin/addManagerAcc';">
                                                            Add Manager
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table ">
                                                            <thead style="background-color: lightgray;">
                                                                <tr>
                                                                    <th scope="col">Number</th>
                                                                    <th scope="col">Email</th>
                                                                    <th scope="col">Full name</th>
                                                                    <th scope="col">Username</th>
                                                                    <th scope="col">Responsible for</th>
                                                                    <th scope="col">CreatedAt</th>
                                                                    <th scope="col">Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="listManager">
                                                                {{#each managers}}
                                                                <tr>
                                                                    <th scope="row">{{@index}}</th>
                                                                    <td>{{email}}</td>
                                                                    <td>{{fullName}}</td>
                                                                    <td>{{accountId.username}}</td>
                                                                    <td >
                                                                        {{categoryId.name}}
                                                                    </td>
                                                                    <td>{{moment createdAt format ="MMMM DD - YYYY"}}</td>
                                                                    <td class="d-flex flex-row">
                                                                        <button
                                                                            class="btn  "
                                                                            title="Update" data-toggle="tooltip"
                                                                            onclick="window.location='/admin/updateManager/{{_id}}'"
                                                                            style="margin-right: 5px;">
                                                                            <i class="ti-pencil-alt"></i>
                                                                        </button>

                                                                        <button id="{{accountId._id}}"
                                                                            class="btn btn-danger  btn-deleteManager"
                                                                            title="Delete" data-toggle="tooltip">
                                                                            <i class="ti-trash"></i>
                                                                        </button>
                                                                    </td>
                                                                    {{else}}
                                                                    <td colspan="8">
                                                                        <div class="alert alert-primary" role="alert">
                                                                            No Data
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                {{/each}}
                                                            </tbody>
                                                        </table>
                                                        {{#if timeFrom}}
                                                        <nav aria-label="Page navigation example">
                                                            <ul class="pagination justify-content-end"
                                                                style="margin: 10px 15px;">
                                                                {{#paginate pagination type="first"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/searchManager?timeFrom={{../timeFrom}}&timeTo={{../timeTo}}&email={{../email}}&p={{n}}">First</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="previous"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/searchManager?timeFrom={{../timeFrom}}&timeTo={{../timeTo}}&email={{../email}}&p={{n}}">Previous</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="middle" limit="7"}}
                                                                <li {{#if active}}class="page-item active" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/searchManager?timeFrom={{../timeFrom}}&timeTo={{../timeTo}}&email={{../email}}&p={{n}}">{{n}}</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="next"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/searchManager?timeFrom={{../timeFrom}}&timeTo={{../timeTo}}&email={{../email}}&p={{n}}">Next</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="last"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/searchManager?timeFrom={{../timeFrom}}&timeTo={{../timeTo}}&email={{../email}}&p={{n}}">Last</a>
                                                                </li>
                                                                {{/paginate}}
                                                            </ul>
                                                        </nav>
                                                        {{else}}
                                                        <nav aria-label="Page navigation example">
                                                            <ul class="pagination justify-content-end"
                                                                style="margin: 10px 15px;">
                                                                {{#paginate pagination type="first"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allManagerAcc?p={{n}}">First</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="previous"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allManagerAcc?p={{n}}">Previous</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="middle" limit="7"}}
                                                                <li {{#if active}}class="page-item active" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allManagerAcc?p={{n}}">{{n}}</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="next"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allManagerAcc?p={{n}}">Next</a>
                                                                </li>
                                                                {{/paginate}}
                                                                {{#paginate pagination type="last"}}
                                                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                                                    <a class="page-link"
                                                                        href="/admin/allManagerAcc?p={{n}}">Last</a>
                                                                </li>
                                                                {{/paginate}}
                                                            </ul>
                                                        </nav>
                                                        {{/if}}
                                                    </div>

                                                </div>

                                            </div>
                                            <!-- Tab variant tab card start -->
                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>

                        <div id="styleSelector">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>