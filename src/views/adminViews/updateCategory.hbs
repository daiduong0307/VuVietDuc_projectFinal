                                    <!-- Page-header start -->
                                    <div class="page-header card" style="background-color: lightgray;">
                                        <div class="row align-items-end">
                                            <div class="col-lg-8">
                                                <div class="page-header-title">

                                                    <div class="d-inline">
                                                        <h4>Update Category</h4>
                                                
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">

                                            </div>
                                        </div>
                                    </div>
                                    <!-- Page-header end -->
                                    <div class="row" style="justify-content: space-around;">
                                        <div class="col-sm-6">
                                            <!-- Tab variant tab card start -->
                                            <div class="card" style="border-radius: 50px;">
                                                <div class="card-block">
                                                        {{#if notify.success}}
                                                        <div class="alert " role="alert"  
                                                            style="width: auto; text-align: center; color:green;">
                                                            {{notify.success}}
                                                        </div>
                                                        {{/if}}

                                                    <form action="/admin/updateOneCategory" method="POST"
                                                        enctype="application/x-www-form-urlencoded"
                                                        class="needs-validation" novalidate>
                                                        <div class="form-group">
                                                            <label for="name"> Name: <span
                                                                    >{{data.category.name}}</span>
                                                            </label>
                                                            {{#if notify.error}}
                                                            <input type="text" class="form-control is-invalid"
                                                                id="inputDanger1" name="name" />
                                                            <div class="invalid-feedback">
                                                                {{notify.error}}
                                                            </div>
                                                            {{else}}
                                                            <input type="text" class="form-control" id="name"
                                                                name="name">
                                                            {{/if}}
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="describe">Description: <span
                                                                    >{{data.category.describe}}</span>
                                                            </label>
                                                            <input type="textarea" class="form-control" id="describe"
                                                                name="describe" rows="3">
                                                        </div>

                                                        <input type="hidden" name="_method" value="PUT">
                                                        <input type="hidden" name="_id" value="{{data._id}}">



                                                        <button type="submit" class="btn "style="border-radius: 50px;"
                                                            id="submit_info">Update</button>
                                                    </form>
                                                </div>
                                            </div>
                                            <!-- Tab variant tab card start -->
                                        </div>
                                    </div>
                                </div>

                            </div>

