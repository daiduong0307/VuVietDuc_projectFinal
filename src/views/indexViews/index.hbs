<!--================ Start Header Area ===============-->
<header class="header-area">
    <div >
        {{> index/header}}
    </div>
</header>
<!--================ End Header Area =================-->

<!--================ Start banner Area =================-->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="banner-content text-center">
  
    </div>
</section>

<!--================ Start Blog Post Area =================-->
<section class="blog-post-area section-gap relative">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">


                    {{#if blogs}}
                    {{#each blogs}}
                    <div class="col-lg-6 col-md-6">
                        <div class="single-amenities" style="border: 1px solid lightgray;">
                            <div class="amenities-thumb">
                                <a href="/blogDetail/{{_id}}">
                                    <img class="img-fluid w-100"  src="/uploads/{{mainImage}}"
                                        alt="Blog_Image" />
                                </a>
                                                            
                            </div>
                            <div class="amenities-details">
                                <h5>
                                    <a href="/blogDetail/{{_id}}">{{titleName}}</a>
                                </h5>
                                <div class="amenities-meta mb-10">
                                    <a href="#" class="">{{moment createdAt format ="DD
                                        MMMM, YYYY"}}</a>
                                    {{!-- <a href="#" class="ml-20"><span >viewer: </span>{{views}}</a> --}}
                                </div>
                                <p>Read more: {{brief}}</p>

                                <div class="d-flex justify-content-between mt-20">

                                    <div class="category">
                                        <a href="/blogByCategory/{{categoryId._id}}">
                                            <span >Category: </span> {{categoryId.name}}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div class="col-md-12">
                        <div class="alert alert-primary" role="alert" style="text-align: center;">
                            There is no content available
                        </div>
                    </div>
                    {{/if}}
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{#if search}}
                        {{> index/searchPagination}}
                        {{else}}
                        {{> index/pagination}}
                        {{/if}}

                    </div>
                </div>
            </div>

            <!-- Start Blog Post Sidebar -->
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">
                    {{> index/searchSidebar}}
                  
                    {{> index/popularBlog}}
                  
                    {{> index/categories}}
                    
                    {{> index/tags}}
                </div>
            </div>

            <!-- End Blog Post Sidebar -->
        </div>
    </div>
</section>
<!--================ End Blog Post Area ================-->

<!--================ Start Footer Area =================-->
{{> index/indexFooter}}
<!--================ End Footer Area ===================-->