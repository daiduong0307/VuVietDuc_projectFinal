<!--================ Start Header Area ===============-->
<header class="header-area">
    <div >
        {{> user/header}}
    </div>
</header>
<!--================ End Header Area =================-->

<!--================ Start banner Area ===============-->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="banner-content text-center">
        
    </div>
</section>
<!--================ End banner Area =================-->

<!--================Blog Area =================-->

<section class="blog-post-area section-gap relative">

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    {{#each bookmarks}}
                    <div class="col-lg-6 col-md-6">
                        <div class="single-amenities"style="border: 1px solid lightgray;">
                            <div class="amenities-thumb">
                                <a href="/users/blogDetail/{{postId._id}}">
                                    <img class="img-fluid w-100" src="/uploads/{{postId.mainImage}}" alt="" />
                                </a>
                            </div>
                            <div class="amenities-details">
                                <h5>
                                    <a href="/users/blogDetail/{{_id}}">{{postId.titleName}}</a>
                                </h5>
                                <div class="amenities-meta mb-10">
                                    <a href="#" class="">{{moment createdAt format ="DD
                                        MMMM, YYYY"}}</a>
                                </div>
                                <p>Read more: {{postId.brief}}</p>

                                <div class="d-flex justify-content-between mt-20">
                                    <div class="category">
                                        <a href="/users/blogByCategory/{{postId.categoryId._id}}">
                                            <span >Category: </span> {{postId.categoryId.name}}
                                        </a>
                                    </div>
                                    <button id="{{postId._id}}"
                                    class="btn btn-outline-danger btn-deleteBookmark">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-bookmarks-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L7 13.101l-4.223 2.815A.5.5 0 0 1 2 15.5V4z" />
                                    <path
                                        d="M4.268 1A2 2 0 0 1 6 0h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L13 13.768V2a1 1 0 0 0-1-1H4.268z" />
                                </svg>
                                </button>
                                </div>
                                                                
                            </div>
                        </div>
                    </div>

                    {{else}}
                    <div class="col-md-12">
                        <div class="alert alert-primary" role="alert" style="text-align: center;">
                            There is no content available
                        </div>
                    </div>
                    {{/each}}
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{#if search}}
                        {{> user/searchPagination}}
                        {{else}}
                        {{> user/pagination}}
                        {{/if}}
                    </div>
                </div>
            </div>

            <!-- Start Blog Post Sidebar -->
            <div class="col-lg-4 sidebar-widgets">
                {{!-- <div class="widget-wrap">
                    {{> user/searchBookmark}}

                </div> --}}
                            <div class="card-block" style="padding: 10px;">

            <form action="/users/searchBookmark" method="GET">
                <div class="form-group row">
                    <div class="col" style="padding: 10px;">
                        <h6>Time From</h6>
                        <input type="date" id="timeFrom" name="timeFrom" class="form-control" placeholder="col" />
                    </div>
                    <div class="col">
                        <h6>Time To</h6>
                        <input type="date" id="timeTo" name="timeTo" class="form-control" placeholder="col-sm-4"
                            value="" />
                    </div>

                </div>
                <div class="row">
                    <div class="col text-right">
                        <button class="btn ">Search</button>
                    </div>
                </div>
            </form>
        </div>
            </div>

            <!-- End Blog Post Sidebar -->
        </div>
    </div>
</section>

<!--================Blog Area =================-->

<!--================ Start Footer Area =================-->
{{> index/indexFooter}}
<!--================ End Footer Area ===================-->

