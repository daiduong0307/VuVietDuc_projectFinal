<!--================ Start Header Area ===============-->
<header class="header-area">
    <div >
        {{> index/header}}
    </div>
</header>
<!--================ End Header Area =================-->

<!--================ Start banner Area =================-->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="banner-content text-center">

    </div>
</section>
<!--================ End banner Area =================-->

<!--================ Start Blog Post Area =================-->
<section class="blog-post-area section-gap relative">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
       
                    {{#each blogs}}
                    <div class="col-lg-6 col-md-6">
                        <div class="single-amenities" style="border: 1px solid lightgray;">
                            <div class="amenities-thumb">
                                <a href="/blogDetail/{{_id}}">
                                <img class="img-fluid w-100" src="/uploads/{{mainImage}}" alt="" />
                                </a>
                                  
                            </div>
                            <div class="amenities-details">
                                <h5>
                                    <a href="/blogDetail/{{_id}}">{{titleName}}</a>
                                </h5>
                                <div class="amenities-meta mb-10">
                                    <a href="#" class="">{{moment createdAt format
                                        ="DD
                                        MMMM, YYYY"}}</a>
                                </div>
                                <p>Read more: {{brief}}</p>

                                <div class="d-flex justify-content-between mt-20">
                                    <div class="category">
                                        <a href="/blogByCategory?categoryId={{categoryId._id}}">
                                            <span >Category:</span> {{categoryId.name}}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="col-md-12">
                        <div class="alert alert-primary" role="alert" style="text-align: center;">
                            There is no content available
                        </div>
                    </div>
                    {{/each}}

                </div>

                <div class="row">
                    <div class="col-lg-12">

                        <nav class="blog-pagination justify-content-center d-flex">
                            <ul class="pagination">
                                {{#paginate pagination type="first"}}
                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                    <a href="/blogByCategory/{{../blogCategory._id}}?p={{n}}" class="page-link" aria-label="Previous">
                                        <span aria-hidden="true">
                                            <span class="ti-shift-left"></span>
                                        </span>
                                    </a>
                                </li>
                                {{/paginate}}
                                {{#paginate pagination type="previous"}}
                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                    <a href="/blogByCategory/{{../blogCategory._id}}?p={{n}}" class="page-link" aria-label="Previous">
                                        <span aria-hidden="true">
                                            <span class="ti-arrow-left"></span>
                                        </span>
                                    </a>
                                </li>
                                {{/paginate}}
                                {{#paginate pagination type="middle" limit="7"}}
                                <li {{#if active}}class="page-item active" {{/if}}>
                                    <a href="/blogByCategory/{{../blogCategory._id}}?p={{n}}" class="page-link">{{n}}</a>
                                </li>
                                {{/paginate}}
                                {{#paginate pagination type="next"}}
                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                    <a href="/blogByCategory/{{../blogCategory._id}}?p={{n}}" class="page-link" aria-label="Next">
                                        <span aria-hidden="true">
                                            <span class="ti-arrow-right"></span>
                                        </span>
                                    </a>
                                </li>
                                {{/paginate}}
                                {{#paginate pagination type="last"}}
                                <li {{#if disabled}}class="page-item disabled" {{/if}}>
                                    <a href="/blogByCategory/{{../blogCategory._id}}?p={{n}}" class="page-link" aria-label="Next">
                                        <span aria-hidden="true">
                                            <span class="ti-shift-right"></span>
                                        </span>
                                    </a>
                                </li>
                                {{/paginate}}
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>

            <!-- Start Blog Post Sidebar -->
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">
                    {{> index/searchSidebar}}
                                        {{> index/popularBlog}}
                    {{> index/categories}}

                    {{> index/tags}}
                </div>
            </div>

            <!-- End Blog Post Sidebar -->
        </div>
    </div>
</section>
<!--================ End Blog Post Area ================-->

<!--================ Start Footer Area =================-->
{{> index/indexFooter}}
<!--================ End Footer Area ===================-->