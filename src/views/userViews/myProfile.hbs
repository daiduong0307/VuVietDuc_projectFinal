<!--================ Start Header Area ===============-->
<header class="header-area">
    <div >
        {{> user/header}}
    </div>
</header>
<!--================ End Header Area =================-->

<!--================ Start banner Area ===============-->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="banner-content text-center">
    </div>
</section>
<!--================ End banner Area =================-->

<!--================Blog Area =================-->
<section class="blog_area section-gap single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="row">   
                    <div class="col-md-12">
                        
                        
                        <div class="single-sidebar-widget">
                                <div class="bio ">
                                <img src="/uploads/{{userInfo.avatar}}" alt="Image Placeholder" class="img-fluid">
                                <div class="bio-body" style="display: flex;
    justify-content: space-between;">
                                    <h3 class="mb-30">{{userInfo.fullName}}</h3>
                                    <p><a href="/users/updateProfile" class="genric-btn primary-border ">Update
                                        Account</a>
                                </p>
                            </div>
                                    <h3 class="text-heading">Hi There! I'm {{userInfo.fullName}}</h3>
                                    <div id="intro">
                                        {{userInfo.introduction}}
                                    </div>
                                </div>

                            </div>
                    </div>
                </div>


                
            </div>
            <!-- Start Blog Post Sidebar -->
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">



                    {{> user/categories}}
                    {{> user/popularBlog}}
                    {{> user/tags}}
                </div>
            </div>

            <!-- End Blog Post Sidebar -->

        </div>


    </div>

</section>
<!--================Blog Area =================-->

<!--================ Start Footer Area =================-->
{{> user/userFooter}}
<!--================ End Footer Area ===================-->


<script>
    $(document).ready(function () {
        $("#intro").html($("#intro").text())
    })
</script>